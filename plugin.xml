<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.bigbluebutton.sip.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="org.bigbluebutton.sip.Perspective"
            id="org.bigbluebutton.sip.perspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="View"
            class="org.bigbluebutton.sip.View"
            id="org.bigbluebutton.sip.view">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <view
               standalone="true"
               minimized="false"
               relative="org.eclipse.ui.editorss"
               relationship="left"
               id="org.bigbluebutton.sip.view">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="File">
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.bigbluebutton.sip.Connecthandler"
            id="org.bigbluebutton.sip.Connect"
            name="name">
      </command>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.bigbluebutton.sip.application"
            name="BigBlueButton SIP Phone">
         <property
               name="appName"
               value="BigBlueButton SIP Phone">
         </property>
         <property
               name="windowImages"
               value="icons/bbb_16.gif,icons/bbb_32.gif,icons/bbb_48.gif,icons/bbb_128.gif">
         </property>
      </product>
   </extension>

</plugin>
